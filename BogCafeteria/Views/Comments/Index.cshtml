@model IEnumerable<BogCafeteria.Entity_Data.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Comments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Comment
        </th>
        <th>
            Company Name
        </th>
        <th>
            Comment Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Comment1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentType.Name)
        </td>
        
    </tr>
}

</table>
